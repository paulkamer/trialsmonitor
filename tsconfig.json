{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2019",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  }
}
