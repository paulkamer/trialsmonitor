{
  "name": "clinical-trials-monitor",
  "version": "0.2.0",
  "homepage": "https://github.com/paulkamer/trialsmonitor",
  "author": "Paul Kamer <paulkamer@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/paulkamer/trialsmonitor.git"
  },
  "private": true,
  "license": "ISC",
  "engines": {
    "node": ">=0.12"
  },
  "scripts": {
    "start:dev": "serverless offline start",
    "dynamodb:start:dev": "serverless dynamodb start --inMemory",
    "lint": "eslint . --cache",
    "lint:updated": "pipe-git-updated --ext=js -- eslint --cache",
    "prettier-check": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettier-check:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
    "prettify": "prettier --write --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettify:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier --write",
    "test:unit": "mocha test/unit/**/*.test.js",
    "test:integration": "mocha --timeout 15000 test/integration/**/*.test.js",
    "test:single": "mocha --timeout 15000",
    "test": "yarn test:unit && yarn test:integration",
    "deploy:prod": "serverless deploy --stage prod"
  },
  "dependencies": {
    "global": "^4.4.0",
    "json-diff": "^0.5.4",
    "node-fetch": "^2.6.0",
    "serverless": "^1.59.3"
  },
  "devDependencies": {
    "@serverless/eslint-config": "^1.2.1",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "git-list-updated": "^1.2.1",
    "mocha": "^7.0.1",
    "prettier": "^1.19.1",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^5.10.1",
    "serverless-step-functions": "^2.17.0",
    "serverless-step-functions-offline": "^2.1.4",
    "sinon": "^8.1.1"
  }
}
