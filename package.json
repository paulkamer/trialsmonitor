{
  "name": "clinical-trials-monitor",
  "version": "0.2.0",
  "homepage": "https://github.com/paulkamer/trialsmonitor",
  "author": "Paul Kamer <paulkamer@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/paulkamer/trialsmonitor.git"
  },
  "private": true,
  "license": "ISC",
  "engines": {
    "node": ">=0.12"
  },
  "scripts": {
    "start": "serverless offline start --noPrependStageInUrl --useChildProcesses",
    "lint": "eslint --ext .ts,.js .",
    "lint:updated": "pipe-git-updated --ext=ts -- eslint",
    "prettier-check": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettier-check:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
    "prettify": "prettier --write --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettify:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier --write",
    "test:unit": "env TS_NODE_PROJECT=\"tscconfig.testing.json\" NODE_ENV=test DISABLE_LOGGING=1 mocha -r ts-node/register test/unit/**/*.test.ts",
    "test:integration": "env TS_NODE_PROJECT=\"tscconfig.testing.json\" DISABLE_LOGGING=1 mocha -r ts-node/register --timeout 15000 test/integration/**/*.test.ts",
    "test:single": "env TS_NODE_PROJECT=\"tscconfig.testing.json\" mocha -r ts-node/register --timeout 15000",
    "test": "yarn test:unit && yarn test:integration",
    "deploy:prod": "serverless deploy --stage prod"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "global": "^4.4.0",
    "json-diff": "^0.5.4",
    "mongodb": "^3.6.0",
    "node-fetch": "^3.1.1",
    "serverless": "^1.78.0",
    "uuid": "^7.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@serverless/eslint-config": "^1.2.1",
    "@types/aws-lambda": "^8.10.61",
    "@types/chai": "^4.2.12",
    "@types/dotenv": "^8.2.0",
    "@types/json-diff": "^0.5.0",
    "@types/mocha": "^8.0.3",
    "@types/mongodb": "^3.5.26",
    "@types/node": "^14.6.0",
    "@types/node-fetch": "^2.5.7",
    "@types/sinon": "^9.0.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.4",
    "git-list-updated": "^1.2.1",
    "mocha": "^7.0.1",
    "mongo-seeding": "^3.4.1",
    "prettier": "^2.0.5",
    "serverless-offline": "^6.5.0",
    "serverless-plugin-typescript": "^1.1.9",
    "serverless-step-functions": "^2.22.0",
    "serverless-step-functions-offline": "^2.1.4",
    "sinon": "^8.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
